FROM mmontuori/pythonenv
RUN python3 -m pip install --upgrade pip
RUN python3 -m pip install tensorflow numpy pandas scipy scikit-learn torch tensorflow keras matplotlib seaborn opencv-python nltk spacy jupyterlab notebook
COPY containerfiles/files/jupyter-notebook.sh /usr/local/bin/
RUN chmod 755 /usr/local/bin/jupyter-notebook.sh
RUN apt clean autoclean
RUN apt autoremove --yes
RUN rm -rf /var/lib/{apt,dpkg,cache,log}/
EXPOSE 8888
