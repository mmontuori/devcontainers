FROM mmontuori/pythonenv
RUN apt-get update
RUN apt-get -y install software-properties-common
RUN python3 -m pip install tensorflow numpy pandas scipy scikit-learn torch tensorflow keras matplotlib seaborn opencv-python nltk spacy nnfs
RUN apt-get clean autoclean
RUN apt-get autoremove --yes
RUN rm -rf /var/lib/{apt,dpkg,cache,log}/
EXPOSE 8888
